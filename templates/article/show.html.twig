{% extends 'base.html.twig' %}

{% block title %}{{ article.title }}{% endblock %}


{% block body %} 
    <style>
        :root {
            --primary-color: #007bff;
            --primary-hover-color: #0056b3;
            --background-color: #f4f4f9;
            --text-color: #333;
            --text-secondary-color: #666;
        }

        body {
            font-family: 'Arial', sans-serif;
            margin: 0;
            background-color: var(--background-color);
            color: var(--text-color);
            line-height: 1.6;
        }

        .container {
            max-width: 800px;
            margin: 2rem auto;
            padding: 2rem;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        }

        .article__header {
            margin-bottom: 2rem;
        }

        .article__title {
            font-size: 2.5rem;
            margin-bottom: 0.5rem;
        }

        .article__category {
            color: var(--text-secondary-color);
            font-size: 1.1rem;
        }

        .article__image {
            width: 100%;
            height: auto;
            border-radius: 10px;
            margin-bottom: 2rem;
        }

        .article__content {
            font-size: 1.1rem;
            margin-bottom: 2rem;
        }

        .article__price {
            font-size: 1.5rem;
            font-weight: bold;
            margin-bottom: 2rem;
        }

        .button {
            display: inline-block;
            padding: 0.8rem 1.5rem;
            background-color: var(--primary-color);
            color: #fff;
            text-decoration: none;
            border-radius: 5px;
            transition: background-color 0.3s ease, transform 0.3s ease;
            font-weight: bold;
        }

        .button:hover, .button:focus {
            background-color: var(--primary-hover-color);
            transform: translateY(-3px);
        }

        .button--secondary {
            background-color: #f0f0f0;
            color: var(--text-color);
        }

        .button--secondary:hover, .button--secondary:focus {
            background-color: #e0e0e0;
        }

        @media (max-width: 768px) {
            .container {
                margin: 1rem;
                padding: 1rem;
            }

            .article__title {
                font-size: 2rem;
            }
        }
    </style>
    <main class="container">
        <article class="article">
            <header class="article__header">
                <h1 class="article__title">{{ article.title }}</h1>
                <p class="article__category">{{ article.category.name }}</p>
            </header>

            <img class="article__image" src="{{ article.image }}" alt="Image de {{ article.title }}">

            <div class="article__content">
                {{ article.content|raw }}
            </div>

            <p class="article__price">Prix : {{ (article.price + (article.tva * article.price) / 100)|number_format(2, ',', ' ') }}â‚¬</p>

            {% if message %}
                <p class="article__message">{{ message }}</p>
            {% endif %}

            <div class="article__actions">
                <a href="{{ path('buy_article', {'id': article.id}) }}" class="button">Acheter l'article</a>
                <a href="{{ path('catalog') }}" class="button button--secondary">Retour au catalogue</a>
            </div>
            {{ form_start(new_conv) }}
            <div>
                {{ form_widget(new_conv.content) }}
            </div>
            <button type="submit">Create</button>
            {{ form_end(new_conv) }}
        </article>
    </main>
{% endblock %}