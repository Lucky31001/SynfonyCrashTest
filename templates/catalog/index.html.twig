            {% endif %}
            {% if article.fav >= 2  %}
                <h2>{{ article.title }} ðŸ˜Š</h2>
            {% else %}
            {% endif %}
            <h2>{{ article.title }}</h2>
            <img src="{{ article.image }}" alt="quelque chose">
            <p>Prix : {{ article.price + (article.txa/100) }}â‚¬</p>
            <p>{{ article.content }}</p>
        {% endfor %}
        <a href="{{ path('create_article') }}">Create an article</a>
        <a href="{{ path('hello_world') }}">Home</a>
    </div>
{% endblock %}